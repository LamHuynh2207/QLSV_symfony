{% extends 'base.html.twig' %}

{% block title %}
  Student
{% endblock %}

{% block body %}
  <h1>
    Student
  </h1>

  <table class="table table-bordered container text-center px-5">
    <tbody>
      <tr>
        <th class="table-primary">
          Id
        </th>
        <td>
          {{ student.id }}
        </td>
      </tr>
      <tr>
        <th class="table-info">
          Name
        </th>
        <td>
          {{ student.Name }}
        </td>
      </tr>
      <tr>
        <th class="table-primary">
          Gender
        </th>
        <td>
          {{ student.Gender }}
        </td>
      </tr>
      <tr>
        <th>
          DayofBirth
        </th>
        <td>
          {{ student.DayofBirth ? student.DayofBirth|date('Y-m-d') : '' }}
        </td>
      </tr>
      <tr>
        <th>
          Course
        </th>
        <td>
          {{ student.Course.CourseName }}
        </td>
      </tr>
    </tbody>
  </table>
  <div class="container px-5">
    <a href="{{ path('app_student_index') }}">back to list</a>

    <a href="{{
      path(
        'app_student_edit',
        {
          id: student.id
        }
      )
      }}">
      edit
    </a>

    {{ include('student/_delete_form.html.twig') }}
  </div>
{% endblock %}
