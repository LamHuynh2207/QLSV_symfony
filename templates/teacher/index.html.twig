{% extends 'base.html.twig' %}

{% block title %}Teacher index{% endblock %}

{% block body %}
    <h1>Teacher Listing</h1>
     <div class="table container px-5">
      
    <table class="table table-striped table-bordered  text-center ">
       
        <thead>
            
            <tr class="table table-info ">
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
            
        </thead>
        <tbody>
        {% for teacher in teachers %}
            
            <tr>
                <td><strong>{{ teacher.id }}</strong></td>
                <td>{{ teacher.Name }}</td>
                <td>{{ teacher.Phone }}</td>
                <td>
                    <a class="btn btn-outline-primary"  type="submit" href="{{ path('app_teacher_show', {'id': teacher.id}) }}">show</a>
                    <a class="btn btn-outline-warning"  type="submit" href="{{ path('app_teacher_edit', {'id': teacher.id}) }}">edit</a>
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
       
    </table>
    <div class="container px-5 ">
    <a class="btn btn-outline-primary container"  type="submit" href="{{ path('app_teacher_new') }}">Create new</a></div>
    </div>
{% endblock %}
