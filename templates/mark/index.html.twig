{% extends 'base.html.twig' %}

{% block title %}Mark index{% endblock %}

{% block body %}
    <h1>Mark Listing</h1>
    <div class="table container px-5">
    <table class="table table-striped table-bordered  text-center ">
        <thead>
            <tr class="table table-info ">
                <th>Id</th>
                <th>Student</th>
                <th>Subject</th>
                <th>ASM1</th>
                <th>ASM2</th>
                <th>Average</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mark in marks %}
            <tr>
                <td><strong>{{ mark.id }}</strong></td>
                <td>{{ mark.Student.Name }}</td>
                <td>{{ mark.Subject.Name }}</td>
                <td>{{ mark.ASM1 }}</td>
                <td>{{ mark.ASM2 }}</td>
                <td>{{ mark.Average }}</td>
                <td>{{ mark.Status }}</td>
                <td>
                    <a class="btn btn-outline-primary"   href="{{ path('app_mark_show', {'id': mark.id}) }}" type="submit">show</a>
                    <a class="btn btn-outline-primary"   href="{{ path('app_mark_edit', {'id': mark.id}) }}" type="submit">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary container" href="{{ path('app_mark_new') }}" type="submit">Create new</a>
    </div>
{% endblock %}
